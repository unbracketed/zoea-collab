# =============================================================================
# Zoea Collab: Agent Cowork Toolkit - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# AI Provider Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_CHAT_MODEL_ID=gpt-4o-mini

GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_ID=gemini-2.5-flash

# Default LLM provider: openai, gemini, or local
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o-mini

# Local model endpoint (for Ollama, LM Studio, etc.)
# LOCAL_MODEL_ENDPOINT=http://localhost:11434

# -----------------------------------------------------------------------------
# File Search / RAG Configuration
# -----------------------------------------------------------------------------
# File search backend (chromadb or gemini)
FILE_SEARCH_BACKEND=chromadb
# CHROMADB_PERSIST_DIRECTORY=/absolute/path/to/chromadb
# FILE_SEARCH_MAX_TEXT_BYTES=2097152

# Image captioning for image indexing
# IMAGE_CAPTION_PROVIDER=openai
# IMAGE_CAPTION_MODEL=gpt-4o
# IMAGE_CAPTION_PROMPT=Write a concise, descriptive caption for search indexing.

# -----------------------------------------------------------------------------
# Django Configuration
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,local.zoea.studio
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Development: SQLite is used by default (no DATABASE_URL needed)
# Local Postgres via Docker (mise run db-start):
# DATABASE_URL=postgresql://zoea:zoea@127.0.0.1:5433/zoea
# Production (Supabase):
# DATABASE_URL=postgresql://postgres:PASSWORD@db.xxx.supabase.co:5432/postgres

# Docker PostgreSQL settings
POSTGRES_USER=zoea
POSTGRES_PASSWORD=zoea
POSTGRES_DB=zoea

# -----------------------------------------------------------------------------
# Port Configuration (Development)
# -----------------------------------------------------------------------------
ZOEA_BACKEND_PORT=8000
ZOEA_FRONTEND_PORT=5173
ZOEA_DOCS_PORT=8001
# Local Postgres port (use 5433 to avoid conflict with system Postgres on 5432)
ZOEA_POSTGRES_PORT=5433

# -----------------------------------------------------------------------------
# CORS / Frontend Configuration
# -----------------------------------------------------------------------------
# Frontend URL for CORS (required for production cross-origin requests)
# FRONTEND_URL=https://app.zoea.studio

# Vite API base URL (for frontend build)
# VITE_API_BASE_URL=https://api.zoea.studio

# -----------------------------------------------------------------------------
# exe.dev VM Configuration
# -----------------------------------------------------------------------------
# Set this to your exe.dev VM hostname (run `hostname` to get it)
# Used for CORS configuration when deploying to exe.dev
# EXE_DEV_HOSTNAME=your-vm-name

# Serve media files even when DEBUG=False (for development VMs)
# Required when running with uvicorn ASGI and DEBUG=False
# SERVE_MEDIA=True

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Mailgun (for webhooks)
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-mailgun-domain

# SMTP settings (production email sending)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# DEFAULT_FROM_EMAIL=noreply@zoea.studio

# -----------------------------------------------------------------------------
# Agent Skills
# -----------------------------------------------------------------------------
# Comma-separated directories containing Agent Skills folders.
# ZOEA_SKILLS_DIRS=skills

# -----------------------------------------------------------------------------
# Document Import Limits
# -----------------------------------------------------------------------------
# ZOEA_IMPORT_MAX_FILE_SIZE_BYTES=52428800
# ZOEA_IMPORT_MAX_TOTAL_SIZE_BYTES=10737418240
# ZOEA_IMPORT_MAX_FILE_COUNT=100000
# ZOEA_IMPORT_MAX_DEPTH=10
# ZOEA_IMPORT_ALLOWED_ROOTS=/absolute/path/one,/absolute/path/two

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# ZOEA_DEFAULT_THEME=ocean

# -----------------------------------------------------------------------------
# Production Settings
# -----------------------------------------------------------------------------
# Set RENDER=true to enable production security settings
# RENDER=true

# Gunicorn workers (production Docker deployments)
# GUNICORN_WORKERS=4
